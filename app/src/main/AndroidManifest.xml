<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mirogal.cocktail">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.mirogal.cocktail.presentation.ui.auth.AuthActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@style/AppTheme.Launcher"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mirogal.cocktail.presentation.ui.main.MainActivity"
            android:label="@string/drink_history_pager_label"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.mirogal.cocktail.presentation.ui.search.SearchDrinkActivity"
            android:label="@string/search_drink_label"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.mirogal.cocktail.presentation.ui.detail.DrinkDetailActivity"
            android:label="@string/drink_detail_label"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name="com.mirogal.cocktail.presentation.service.ProposeDrinkService"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE" />
        <service
            android:name="com.mirogal.cocktail.presentation.service.BootCompleteService"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <receiver
            android:name="com.mirogal.cocktail.presentation.receiver.BootCompleteReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>