<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.ui.main.drink.DrinkFilterFragment">

    <data>
        <variable
            name="viewmodel"
            type="com.mirogal.cocktail.presentation.ui.main.drink.DrinkViewModel"
            />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_primary"
        android:clickable="true"
        android:focusable="true">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:paddingStart="@dimen/offset_48"
                android:background="?attr/colorPrimary"
                android:theme="@style/AppTheme.PopupOverlay"
                tools:ignore="RtlSymmetry"
                />
        </com.google.android.material.appbar.AppBarLayout>
        <ImageView
            android:id="@+id/btn_toolbar_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="@dimen/offset_4"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back"
            android:elevation="@dimen/elevation_4"
            app:elevation="@dimen/elevation_4"
            tools:ignore="ContentDescription"
            />
        <include
            layout="@layout/fragment_drink_filter_content"
            app:viewmodel="@{viewmodel}"
            />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>