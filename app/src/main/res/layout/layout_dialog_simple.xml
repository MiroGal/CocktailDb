<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="#00FFFFFF"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:outlineProvider="none">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingTop="@dimen/offset_12"
        android:paddingBottom="@dimen/offset_24">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/offset_16"
                android:paddingEnd="@dimen/offset_4"
                tools:ignore="RtlSymmetry,UseCompoundDrawables">
                <TextView
                    android:id="@+id/txt_dialog_bs_title"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/offset_48"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="3"
                    android:padding="0dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    tools:text="Помилка входу" />
                <ImageView
                    android:id="@+id/btn_dialog_bs_close"
                    android:layout_width="@dimen/offset_48"
                    android:layout_height="@dimen/offset_48"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/offset_16" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_dialog_bs_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/offset_24"
                android:paddingStart="@dimen/offset_16"
                android:paddingEnd="@dimen/offset_16"
                tools:text="Ви не зареєстровані, невірно ввели номер телефону або пароль." />

            <FrameLayout
                android:id="@+id/vg_dialog_bs_extra_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/vg_dialog_bs_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/offset_16"
                android:paddingEnd="@dimen/offset_16">
                <TextView
                    android:id="@+id/lb_dialog_bs_left"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/offset_48"
                    android:layout_weight="1"
                    style="@style/Button" />
                <Space
                    android:id="@+id/space_dialog_bs_buttons"
                    android:layout_width="@dimen/offset_16"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/lb_dialog_bs_right"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/offset_48"
                    android:layout_weight="1"
                    style="@style/Button" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</FrameLayout>