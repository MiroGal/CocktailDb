<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/offset_16"
    android:paddingEnd="@dimen/offset_16"
    android:paddingTop="@dimen/offset_32"
    android:paddingBottom="@dimen/offset_32"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.auth.AuthActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:src="@drawable/img_logo_cocktail"
        tools:ignore="ContentDescription" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <EditText
        android:id="@+id/txt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/auth_login_hint"/>
    <EditText
        android:id="@+id/txt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/auth_password_hint"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_authorization"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/auth_btn_authorization"
        android:background="@drawable/bg_button"
        android:textColor="@color/white"/>

</LinearLayout>