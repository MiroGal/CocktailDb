<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <View
        android:layout_width="@dimen/offset_48"
        android:layout_height="@dimen/offset_4"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/offset_16"
        android:background="@drawable/bg_dialog_bottom_sheet_line" />
    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/offset_16"
        android:text="@string/dialog_logout_title"
        style="@style/TextTitle" />
    <TextView
        android:id="@+id/tv_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/offset_32"
        android:text="@string/dialog_logout_message"
        style="@style/TextBody" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_primary"
        android:focusable="true"
        android:clickable="true">
        <TextView
            android:id="@+id/btn_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/offset_36"
            android:layout_weight="1"
            android:paddingStart="@dimen/offset_16"
            android:paddingEnd="@dimen/offset_16"
            android:clickable="false"
            android:text="@string/dialog_btn_cancel"
            style="@style/SystemButton" />
        <TextView
            android:id="@+id/btn_dialog_ok"
            android:layout_width="0dp"
            android:layout_height="@dimen/offset_36"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/offset_16"
            android:paddingStart="@dimen/offset_16"
            android:paddingEnd="@dimen/offset_16"
            android:clickable="false"
            android:text="@string/dialog_logout_btn_ok"
            style="@style/SystemButton" />
    </LinearLayout>

</LinearLayout>